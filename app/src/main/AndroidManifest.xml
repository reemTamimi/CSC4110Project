<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.wsu.chronicillnessawareness">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        tools:ignore="ManifestOrder" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="edu.wsu.chronicillnessawareness.MyApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="edu.wsu.chronicillnessawareness.settings.UsernameActivity" />
        <activity android:name="edu.wsu.chronicillnessawareness.notifications.NotificationScreen" />
        <activity android:name="edu.wsu.chronicillnessawareness.settings.NameActivity" />
        <activity android:name="edu.wsu.chronicillnessawareness.settings.LocationActivity" />
        <activity android:name="edu.wsu.chronicillnessawareness.settings.LinkActivity" />
        <activity android:name="edu.wsu.chronicillnessawareness.settings.BioActivity" />
        <activity android:name="edu.wsu.chronicillnessawareness.Check" />
        <activity
            android:name="edu.wsu.chronicillnessawareness.post.Post"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name="edu.wsu.chronicillnessawareness.user.MediaView" />
        <activity
            android:name="edu.wsu.chronicillnessawareness.user.StoryView"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="edu.wsu.chronicillnessawareness.menu.Saved"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="edu.wsu.chronicillnessawareness.groupSettings.EditGroup"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity
            android:name="edu.wsu.chronicillnessawareness.post.PostLikedBy"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="edu.wsu.chronicillnessawareness.shareChat.ShareChatActivity"
            android:configChanges="orientation"
            android:label="Add to chat"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="video/*" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.wsu.chronicillnessawareness.shareChat.ShareActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="edu.wsu.chronicillnessawareness.user.MyFollowing"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="edu.wsu.chronicillnessawareness.post.PostDetails"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="edu.wsu.chronicillnessawareness.post.UpdatePost"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="edu.wsu.edu.wsu.chronicillnessawareness.user.FollowersList"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="edu.wsu.chronicillnessawareness.user.UserProfile"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="edu.wsu.chronicillnessawareness.search.Search"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="edu.wsu.chronicillnessawareness.menu.Menu"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="edu.wsu.chronicillnessawareness.search.ProfileSearch"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="edu.wsu.chronicillnessawareness.settings.EditProfile"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="edu.wsu.chronicillnessawareness.Final"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AuthTheme" />

        <activity
            android:name="edu.wsu.chronicillnessawareness.authEmail.ForgotPassword"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AuthTheme" />
        <activity
            android:name="edu.wsu.chronicillnessawareness.authEmail.Finish"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AuthTheme" />
        <activity
            android:name="edu.wsu.chronicillnessawareness.authEmail.SignUp"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AuthTheme" />
        <activity
            android:name="edu.wsu.chronicillnessawareness.authEmail.SignIn"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AuthTheme" />
        <activity
            android:name="edu.wsu.chronicillnessawareness.welcome.IntroLast"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AuthTheme" />
        <activity
            android:name="edu.wsu.chronicillnessawareness.welcome.IntroActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AuthTheme" />
        <activity
            android:name="edu.wsu.chronicillnessawareness.welcome.SplashScreen"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AuthTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.wsu.chronicillnessawareness.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-8957916229862289~8827946397" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="edu.wsu.chronicillnessawareness.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/paths" />
        </provider>

        <service
            android:name="edu.wsu.chronicillnessawareness.notifications.FirebaseMessaging"
            android:enabled="true"
            android:exported="true"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>